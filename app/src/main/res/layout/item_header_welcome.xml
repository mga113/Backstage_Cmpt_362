<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deep_sea_blue"
    android:paddingBottom="16dp">

    <!-- Title Bar -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/deep_sea_blue"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:text="My Account"
        android:textColor="@color/light_teal"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <!-- Profile Section: Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp">

        <!-- Profile Image (Left) -->
        <!-- Removed strokeColor and padding to remove neon border -->
        <!-- Changed shapeAppearanceOverlay to a simpler rounded corner style if needed, or default -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle" />

        <!-- Text Section (Right) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="24dp">

            <TextView
                android:id="@+id/subtitle"
                android:text="Welcome to BackStage"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signInButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginTop="12dp"
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
